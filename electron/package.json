{
  "name": "importease",
  "version": "1.0.0",
  "description": "ImportEase - Guided GSTR-2B to purchase register helper for CAs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "node-machine-id": "^1.1.12",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.8.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "uuid": "^11.0.2",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.jeet115.importease",
    "productName": "ImportEase",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "fileService.js",
      "!client/node_modules",
      "!backend/node_modules",
      "client/dist/**/*",
      "backend/**/*",
      "!**/node_modules/*/{test,__tests__,example,examples}/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Jeet-115",
        "repo": "ImportEase"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../client/public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
