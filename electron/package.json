{
  "name": "importease",
  "version": "1.0.0",
  "description": "ImportEase - Guided GSTR-2B to purchase register helper for CAs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^25.1.7"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.jeet115.importease",
    "productName": "ImportEase",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "fileService.js",
      "dist/win-unpacked/**/*",
      "../client/dist/**/*",
      "../backend/**/*",
      "!**/node_modules/*/{test,__tests__,example,examples}/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Jeet-115",
        "repo": "ImportEase"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../client/public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
